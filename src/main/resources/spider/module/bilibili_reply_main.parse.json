{
    "//": "b站规则太麻烦了，暂不抓评论了，弃了！！！",
    "type_x": "bilibili动态",
    "type": "parser",
    "ruleName_x": "规则名称",
    "ruleName": "bilibili_reply_main",
    "urlPattern_x": "判断url是否使用当前配置的规则来解析",
    "urlPattern": "https://api.bilibili.com/x/v2/reply/main\\?.*",
    "examples": [
        "https://api.bilibili.com/x/v2/reply/main?next=0&type=17&oid=814399531036704769&mode=2&plat=1"
    ],
    "//parentAttr": "用于：1. 区别文档类型；2. 缩小范围",
    "parentAttr": {
        "parserType": 11,
        "parserPath": ".data.replies"
    },
    "//attrs": "属性列表",
    "attrs": [
        {
            "field": "_tableName",
            "defaultValue": "bili_reply_main",
            "parserType": 0
        },
        {
            "field": "dynamic_id",
            "description": "动态id",
            "parserType": 10,
            "parserPath": ".oid"
        },
        {
            "field": "rpid",
            "description": "评论ID",
            "parserType": 10,
            "parserPath": ".rpid_str"
        },
        {
            "field": "user_id",
            "description": "user id",
            "parserType": 10,
            "parserPath": ".member.mid"
        },
        {
            "field": "user_name",
            "description": "user name",
            "parserType": 10,
            "parserPath": ".member.uname"
        },
        {
            "field": "ctime",
            "description": "评论时间",
            "parserType": 10,
            "parserPath": ".ctime"
        }
    ],
    "seedDiscoveries": [
        {
            "//": "当前页码+1",
            "urlTemplate": "https://api.bilibili.com/x/v2/reply/main?next=0&type=17&oid={dynamic_id}&mode=3&plat=1",
            "type": 40
        },
        {
            "//": "获取第一页的评论回复；",
            "//dynamic_id": "动态ID；",
            "//root": "评论ID；",
            "urlTemplate": "https://api.bilibili.com/x/v2/reply/reply?oid={dynamic_id}&pn=(.*)&ps=10&root={rpid}&type=17&_=%s",
            "type": 40
        }
    ],
    "isList_x": "是否是列表页",
    "isList": 1
}
